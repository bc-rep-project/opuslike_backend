DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/opus
REDIS_URL=redis://redis:6379/0
API_KEY=dev-key
WHISPER_MODEL=small
DEVICE=cpu
MEDIA_ROOT=/data

# Storage backend: local | s3 | gcs
STORAGE_BACKEND=local

# S3 configuration (when STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=your-bucket
S3_PREFIX=clips/

# GCS configuration (when STORAGE_BACKEND=gcs)
GCS_BUCKET=your-gcs-bucket
GCS_PREFIX=clips/
# Option 1: set GOOGLE_APPLICATION_CREDENTIALS to a mounted file path (Docker volume)
# Option 2: paste JSON into this env var:
GCS_SERVICE_ACCOUNT_JSON=

BROLL_DIR=/app/assets/broll

# YouTube uploader (OAuth2 refresh token)
YT_CLIENT_ID=
YT_CLIENT_SECRET=
YT_REFRESH_TOKEN=

# Email provider (choose one)
SENDGRID_API_KEY=
# OR
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
EMAIL_FROM=no-reply@example.com

# TikTok Open API access token (requires permissions)
TIKTOK_ACCESS_TOKEN=

SLACK_SIGNING_SECRET=
